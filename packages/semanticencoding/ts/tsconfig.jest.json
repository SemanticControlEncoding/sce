{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "composite": false,
        "declaration": false,
        "declarationMap": false,
        "emitDeclarationOnly": false,
        "incremental": false,
        "noEmit": true,
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "dist/**/*",
        "node_modules"
    ]
}