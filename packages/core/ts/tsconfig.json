{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "rootDir": "./src",
        "declaration": true,
        "composite": true,
        "incremental": true,
        "tsBuildInfoFile": "./.tsbuildinfo",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "dist/**/*",
        "node_modules",
        "**/*.test.ts",
        "coverage/**/*"
    ]
}