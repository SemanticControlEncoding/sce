{
  "name": "@sce/root",
  "version": "0.0.1",
  "private": false,
  "description": "An open semantic layer enabling LLM-native communication protocols",
  "scripts": {
    "build": "tsc -b",
    "test": "pnpm -w -r --filter ./packages/**/ts test",
    "test:cover": "pnpm -w -r --filter ./packages/**/ts test:cover",
    "lint": "pnpm -w -r --filter ./packages/**/ts lint",
    "publish": "pnpm -w -r --filter ./packages/**/ts publish --access public",
    "clean:build": "pnpm -w -r --filter ./packages/**/ts exec -- rimraf dist .tsbuildinfo",
    "build:force": "pnpm -w -r --filter ./packages/**/ts exec -- tsc -b --force",
    "docs": "mkdocs serve"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "rimraf": "^6.1.0"
  },
  "license": "EthicalUse-1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SemanticControlEncoding/sce.git"
  }
}
